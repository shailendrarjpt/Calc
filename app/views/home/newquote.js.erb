$('#mserviceag').on('click', function () {
       if ($('#agarea').length) {
            if ($('#agarea').html() == '') {
                swal({
                  title: "Please include Access Governance first",
                  text: "If this is a move of an existing implementation to cloud, choose 'No' for Include Implementation",
                  type: "warning",
                  showCancelButton: true,
                  confirmButtonColor: "#DD6B55",
                  confirmButtonText: "Yes, add AG tab",
                  closeOnConfirm: false
                },
                function(){
                    $.get('/home/agservice');
                    $.get('/home/mserviceag');
                  swal("Adding Access Governance", "success");
                });
            } else {
                $.get('/home/mserviceag');
            }
       }
});

