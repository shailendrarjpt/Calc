    <div class="ibox-content">
        <div class="row">
            <div class="col-md-12 text-left">
                <h4 class="tabheader">Identity Administration</h4>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label class="col-md-6 control-label">Internal Identities</label>
                <div class="col-md-6">
                    <input type="text" class="form-control text-right" name="msidaobj[intident]" value="4" required data-error="Campaign count is required">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="col-md-6 control-label">External Identities</label>
                <div class="col-md-6">
                    <input type="text" class="form-control text-right" name="msidaobj[extident]" value="4" required data-error="Campaign count is required">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="col-md-6 control-label">Contract Term Months</label>
                <div class="col-md-6">
                    <input class="spinusermonths" type="text" value="36" name="msidaobj[msterms]" style="text-align:center;" required data-error="Contract Term is required">
                </div>
            </div>
        </div>
        <div class="row">
                <div class="form-group col-md-6">
                    <label class="col-md-4 control-label">Infrastructure</label>
                    <div class="col-md-8">
                        <div class="radio radio-info radio-inline">
                            <input id="rdtim" type="radio" value="cloud" name="msidaobj[msinfrastructure]" checked="checked">
                            <label for="infra">Cloud</label>
                        </div>
                        <div class="radio radio-inline">
                            <input id="rdfixed" type="radio" value="onprem" name="msidaobj[msinfrastructure]" >
                            <label for="infra">On-prem</label>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="col-md-4 control-label">Include Implementation</label>
                    <div class="col-md-8">
                        <div class="radio radio-info radio-inline">
                            <input id="rdtim" type="radio" value="yes" name="msidaobj[msimplement]" checked="checked">
                            <label for="msimplement">Yes</label>
                        </div>
                        <div class="radio radio-inline">
                            <input id="rdfixed" type="radio" value="no" name="msidaobj[msimplement]" >
                            <label for="msimplement">No</label>
                        </div>
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label class="col-md-4 control-label">Service Level</label>
                <div class="col-md-8">
                    <select data-placeholder="Choose" class="chosen-select" tabindex="2" name="msidaobj[svclvl]" required data-error="Service Level is required">
                        <option value="">Select</option>
                        <option value="silver">Silver</option>
                        <option value="gold">Gold</option>
                        <option value="platinum">Platinum</option>
                    </select>
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="col-md-6 control-label">Software License Cost</label>
                <div class="col-md-6">
                    <input type="text" class="form-control text-right" name="msidaobj[swcost]" value="0" required data-error="Software Licensing is required">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label class="col-md-4 control-label">Support Coverage</label>
                <div class="col-md-8">
                    <select data-placeholder="Choose support" class="chosen-select" tabindex="2" name="msidaobj[support]" required data-error="Support Coverage is required">
                        <option value="">Select</option>
                        <option value="eightbyfive">8 x 5</option>
                        <option value="eightbyseven">8 x 7</option>
                        <option value="twentyfourbyfive">24 x 5</option>
                        <option value="twentyfourbyseven">24 x 7</option>
                    </select>
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="col-md-6 control-label">Software Maintenance Cost/Yr</label>
                <div class="col-md-6">
                    <input type="text" class="form-control text-right" name="msidaobj[swmcost]" value="0" required data-error="Software Maintenance is required">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
        </div>
    </div>
</div>

