<div id="quotedet">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5><%= @basic["customer"] %> - <%= @basic["project"] %> - Professional Services Quote Details</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover quotetable" >
                    <thead>
                    <tr>
                        <th></th>
                        <th>Activity/Deliverable</th>
                        <th class="text-right">PM Hours</th>
                        <th class="text-right">BA Hours</th>
                        <th class="text-right">Arch Hours</th>
                        <th class="text-right">Consultant Hours</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% lastsection = "" %>
                        <% @quote_array.each do |item| %>
                            <tr class="gradeX">
                                <% if item.section == lastsection %>
                                    <td></td>
                                <% else %>
                                    <td class="qsection"><%= item.section %></td>
                                <% end %>
                                <% lastsection = item.section %>
                                <td class="center"><%= item.act %></td>
                                <td class="text-right"><%= item.pm %></td>
                                <td class="text-right"><%= item.ba %></td>
                                <td class="text-right"><%= item.arch %></td>
                                <td class="text-right"><%= item.con %></td>
                            </tr>
                        <% end %>
                        <tr>
                            <td></td>
                            <td>Totals</td>
                            <td class="text-right"><%= @totals.tpm %></td>
                            <td class="text-right"><%= @totals.tba %></td>
                            <td class="text-right"><%= @totals.tarch %></td>
                            <td class="text-right"><%= @totals.tcon %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>