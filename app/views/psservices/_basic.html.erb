                                            <label class="col-md-4 control-label">Onshore Consultant</label>
                                            <div class="col-md-8">
                                                <div class="input-group m-b">
                                                    <span class="input-group-addon">$</span>
                                                    <input type="text" value="210" class="form-control text-right" name="basic[onconrate]" required>
                                                    <span class="input-group-addon">.00</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
