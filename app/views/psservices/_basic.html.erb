                    <div class="ibox float-e-margins" style="display:none;">
                        <div class="ibox-title" style="background-color:#f3f3f4;padding-left:0px; padding-right:0px;">
                            <h5>Rates</h5>
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up pull-right"></i>
                                </a>
                                <div class="ibox-content" style="border:none; padding-left:0px; padding-right:0px; display:none;">
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label class="col-md-4 control-label">Project Manager</label>
                                            <div class="col-md-8">
                                                <div class="input-group m-b">
                                                    <span class="input-group-addon">$</span>
                                                    <input type="text" value="260" class="form-control text-right" name="basic[pmrate]" required>
                                                    <span class="input-group-addon">.00</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="col-md-4 control-label">Business Analyst</label>
                                            <div class="col-md-8">
                                                <div class="input-group m-b">
                                                    <span class="input-group-addon">$</span>
                                                    <input type="text" value="240" class="form-control text-right" name="basic[barate]" required>
                                                    <span class="input-group-addon">.00</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
