            <div class="ibox-content">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="col-md-4 control-label">Customer</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="basic[customer]" required data-error="Customer Name is required" value="Customer">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="col-md-4 control-label">Project</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="basic[project]"  required data-error="Project Name is required" value="Project">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="col-md-4 control-label">Pricing Model</label>
                        <div class="col-md-8">
                            <div class="radio radio-info radio-inline">
                                <input id="rdtim" type="radio" value="timemat" name="basic[pricing]" checked="checked">
                                <label for="pricing">Time and Materials</label>
                            </div>
                            <div class="radio radio-inline">
                                <input id="rdfixed" type="radio" value="fixed" name="basic[pricing]" >
                                <label for="pricing">Fixed Price</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="col-md-4 control-label">Total Identities</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control text-right" name="basic[numidentities]" value=1 required data-error="Number of Identities is required">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="col-md-4 control-label">Number Authoritative Sources</label>
                        <div class="col-md-8">
                            <input class="spinuserpop" type="text" value="1" name="basic[authsource]" style="text-align:center;" required data-error="Authoritative Sources is required">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                </div>
                <div class="quickgroup">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="col-md-4 control-label">Expenses</label>
                            <div class="col-md-8">
                                <input class="spinexpense" type="text" value="15" name="basic[expense]" style="text-align:center;">
                            </div>
                        </div>
